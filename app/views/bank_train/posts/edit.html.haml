.page-posts-form-edit
  = simple_form_for @post do |f|
    = f.input :id, as: :hidden, input_html: { value: @post.id }

    = f.input :number

    = f.input :name

    = f.input :desc

    = f.association :levels, label_method: :name, as: :check_boxes
    
    = f.association :business_categories, label_method: :name, as: :check_boxes

    = f.button :submit, "提交"


