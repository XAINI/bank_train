.page-levels-index
  %h3 设置级别
  %button.btn.btn-primary.btn-lg.level-crt{:type => "button", :data =>{:toggle => "modal", :target =>"#modal-dialog"}}创建级别
  %table.table.table-striped.table-bordered.level-list
    %caption 级别清单
    %thead
      %tr
        %th 级别编号
        %th 级别名
        %th 操作
    %tbody
      - if @levels.blank?
        %tr
          %td{colspan: 3} 没有数据
      - @levels.each do |level|
        %tr.level
          %td.number= level.number
          %td= level.name
          %td
            .btn-group.btn-group-sm
              %a.btn.btn-default.update-level{href: "#", :data =>{:toggle => "modal", :target =>"#modal-dialog", :level_id => "#{level.id}"}}
                %i.glyphicon.glyphicon-pencil
                %span 修改
              %a.btn.btn-default{href: "/levels/#{level.id}", data: {confirm: "确认删除吗?", method: :delete}}
                %i.glyphicon.glyphicon-trash
                %span 删除

  = render_cell :"bank_train/modal", :show
